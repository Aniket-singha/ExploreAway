extends base


block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Sign up now
            form.form.form--signup
                .form__group
                    label.form__label(for='username') Username
                    input#username.form__input(type='text', value='', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', value='', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') PasswordConfirm
                    input#passwordConfirm.form__input(type='password', value='', required, minlength='8')   
                .form__group
                    button.btn.albela.btn--green Create Account